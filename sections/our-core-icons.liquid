<!--our-core-icons.liquid-->
<section id="our-core-{{ section.id }}" class="bg-[#F9F7F3] py-12 md:py-16">
  <div class="max-w-[1180px] mx-auto px-4 md:px-6 text-center">

    {% if section.settings.heading != blank %}
      <h2 class="text-[#2A5072] text-[28px] md:text-[36px] font-bold leading-none mb-8 md:mb-10">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="flex items-center justify-center flex-wrap">
      {% for block in section.blocks %}
        <div class="flex items-center justify-center ">
          {% if block.settings.image != blank %}
             {{
              block.settings.image
              | image_url: width: 600
              | image_tag:
                class: 'block pointer-events-none select-none object-contain lg:!max-h-[200px] !max-h-[130px] !w-auto !max-w-none'
            }}
          {% endif %}
        </div>
      {% endfor %}
    </div>

    
  </div>
</section>
{% schema %}
{
  "name": "Our Core Icons",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Our Core"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Core Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Core Icon"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Our Core Icons",
      "category": "Content",
      "blocks": [
        { "type": "icon" },
        { "type": "icon" },
        { "type": "icon" },
        { "type": "icon" }
      ]
    }
  ]
}
{% endschema %}