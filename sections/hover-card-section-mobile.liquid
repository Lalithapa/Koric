{%- style -%}

  @media (max-width: 768px) {
    
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  }
{%- endstyle -%}
{% schema %}
{
  "name": "hover card mobile",
  "class": "hover-card-section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Shop by skin need" },
    { "type": "text", "id": "subtext", "label": "Subtext", "default": "Each Koric bar is powered by micro-foaming technology and clinically backed actives." },
    { "type": "url", "id": "cta_url", "label": "Header link URL" },
    { "type": "text", "id": "cta_label", "label": "Header link label (desktop)", "default": "browse all" },
    { "type": "text", "id": "cta_label_mobile", "label": "Header link label (mobile)", "default": "BROWSE ALL" },
    { "type": "range", "id": "padding_top_mobile", "min": 0, "max": 100, "step": 2, "unit": "px", "label": "Padding Top (Mobile)", "default": 20 },
    { "type": "range", "id": "padding_bottom_mobile", "min": 0, "max": 100, "step": 2, "unit": "px", "label": "Padding Bottom (Mobile)", "default": 20 }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Product Title",
          "default": "ALPHA ARBUTIN"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Visibly fades tan and uneven tone while revealing a brighter, more even complexion"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "VIEW PRODUCTS"
        }
         
      ]
    }
  ],
  "presets": [
    {
      "name": "hover card mobile ",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<section class="rounded-t-[32px] bg-[#F7F5F2] korean-cleansing lg:hidden! md:hidden! block! section-{{ section.id }}-padding ">
    <div class="mx-auto section section--page-width">
      <!-- Header -->
    <div class=" px-5 md:px-6 flex flex-col gap-5 ">
      <div>
        <span class="inline-block mb-[23px] rounded-[50px] bg-[#F9BDF9] shadow-[0_1px_1px_0_rgba(192,178,178,0.25)] px-4 py-[6px] text-[#2A5072] text-[12px]! font-medium tracking-wide">{{'Less foam. More care'}}</span>
      {% if section.settings.heading != blank %}
        <h2 class="text-[26px]! lg:text-[38px]! font-medium leading-normal text-[#2A5072]!">
          {{ section.settings.heading }}
        </h2>
      {% endif %}
      </div>
      {% if section.settings.subtext != blank %}
        <p class="max-w-[324px] lg:text-[17px]! text-[14px]! font-normal leading-[1.1] text-[#2A5072]">
          {{ section.settings.subtext }}
        </p>
      {% endif %}

      <div class="md:justify-self-end">
        {% if section.settings.cta_url != blank and section.settings.cta_label != blank %}
          <a
            href="{{ section.settings.cta_url }}"
            class="inline-flex items-center gap-2 text-[16px]! font-semibold uppercase tracking-wide text-[#2A5072]! underline  "
          >
            <span class="underline">{{ section.settings.cta_label }}</span>
            <span aria-hidden="true" class="text-[16px]!">â†’</span>
          </a>
        {% endif %}
      </div>
    </div>

<div class="mt-10 relative ">
    <!-- Swiper container -->
    <div class="swiper koreanSwiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="relative rounded-xl overflow-hidden shadow-md  mx-auto">
              {% if block.settings.image != blank %}
                <img
                  src="{{ block.settings.image | image_url: width: 600 }}"
                  alt="{{ block.settings.title }}"
                  class="w-full h-[380px] object-cover"
                  width="100%"
                  height="auto"
                >
              {% endif %}
              
              <!-- Gradient overlay -->
              <div class="absolute inset-0 "></div>
              
              <!-- Text overlay -->
              <div class="absolute bottom-0 left-0 right-0 p-5 z-10">
                <div class="">
                <h3 class="text-[#232323]! text-[16px]! not-italic font-bold! leading-normal uppercase">{{ block.settings.title }}</h3>
                <p class="text-[#595959]! text-[12px]! font-normal! leading-[1.3] mt-2 max-w-[190px]">{{ block.settings.description }}</p>
                </div>
                {% if block.settings.button_link != blank %}
                  <a href="{{ block.settings.button_link }}" class="block bg-[#ADD1F2]  text-[#2A5072]! text-center whitespace-nowrap  text-[12px]! font-bold leading-normal uppercase py-[9px] px-20 rounded-full mt-6">
                    {{ block.settings.button_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  </div>
</section>

<!-- Swiper Styles -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>

<!-- Swiper Script -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper(".koreanSwiper", {
      slidesPerView: 1.2,
      spaceBetween: 16,
      loop: true,
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      breakpoints: {
        768: {
          slidesPerView: 2.5,
        },
        1024: {
          slidesPerView: 3,
        },
      },
    });
  });
</script>
